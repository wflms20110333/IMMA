<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_bg"
    tools:context=".ui.studio.StudioFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:gravity="center"
            android:padding="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:gravity="center"
                android:id="@+id/bbugName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gaegu_bold"
                android:inputType="textPersonName"
                android:text="@string/bbug_default_name"
                android:textColor="#3E4350"
                android:textSize="35sp" />

            <ImageView
                android:padding="20dp"
                android:id="@+id/avatar_preview"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:src="@drawable/logo" />

            <Button
                android:layout_centerInParent="true"
                android:id="@+id/avatar_change_button"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/blue_button"
                android:text="@string/studio_upload"
                android:textAllCaps="false" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gaegu_bold"
                android:text="@string/studio_options"
                android:textColor="#3E4350"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/emoji_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/studio_style1" />

            <SeekBar
                android:padding="5dp"
                android:id="@+id/emoji_bar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="3"
                android:progress="2" />

            <TextView
                android:id="@+id/capital_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/studio_style2" />

            <SeekBar
                android:padding="5dp"
                android:id="@+id/capital_bar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="3"
                android:progress="2" />

            <TextView
                android:id="@+id/punct_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/studio_style3" />

            <SeekBar
                android:padding="5dp"
                android:id="@+id/punct_bar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="3"
                android:progress="2" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/blue_button"
                android:text="@string/studio_save"
                android:textAllCaps="false" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:gravity="center"
                android:id="@+id/moreBbugOptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gaegu_bold"
                android:text="@string/studio_option_text1"
                android:textColor="#3E4350"
                android:maxLines="3"
                android:lines="2"
                android:textSize="18sp" />

            <TextView
                android:gravity="center"
                android:id="@+id/twitterLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gaegu_bold"
                android:text="@string/studio_option_text2"
                android:textColor="#3E4350"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>