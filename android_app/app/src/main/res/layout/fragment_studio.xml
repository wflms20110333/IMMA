<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mybrowserbugs.MyBrowserbugsFragment" >

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="276dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Switch
            android:id="@+id/activationSwitch"
            android:layout_width="103dp"
            android:layout_height="59dp"
            android:text="Activateeeeeeeeeeeeeeeeeee" />

        <Spinner
            android:id="@+id/msgFreqSpinner"
            android:layout_width="332dp"
            android:layout_height="237dp" />

        <EditText
            android:id="@+id/bbugName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Your Browserbug" />

        <TextView
            android:id="@+id/nav_header_title"
            android:layout_width="79dp"
            android:layout_height="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/nav_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>