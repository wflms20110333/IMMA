{
    "name": "IMMA",
    "version": "1.02",
    "description": "A customizable AI friend to accompany you and provide messages of encouragement!",
    "icons": {
        "16": "images/new_imma_16.png",
        "32": "images/new_imma_32.png",
        "48": "images/new_imma_48.png",
        "128": "images/new_imma_128.png"
    },
    "permissions": ["storage", "activeTab", "tabs", "notifications", "history", "alarms"],
    "optional_permissions": ["http://*/", "https://*/"],
    "web_accessible_resources": [
        "images/character images/001_ironman.png",
        "images/character images/002_hoshi.png",
        "images/character images/003_rilakkuma.png",
        "images/character images/004_shia.png",
        "images/character images/005_moana.png"
    ],
    "background": {
        "scripts": ["util.js", "constants.js", "background.js", "jquery-3.5.1.min.js"],
        "persistent": false
    },
    "manifest_version": 2,
    "browser_action": {
        "default_title": "IMMA",
        "default_icon": "images/new_imma_32.png",
        "default_popup": "popup/popup.html"
    }
}